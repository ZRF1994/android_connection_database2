<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@drawable/login">
    <TextView
        android:id="@+id/pushnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="70px"
        android:textColor="@color/red"
        android:gravity="center"
    />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:onClick="onClick"
        android:text="登录"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:textColor="@color/wheat"/>

    <Button
        android:id="@+id/btn_regedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_login"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:onClick="onClick"
        android:text="注册"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:textColor="@color/wheat"/>

    <EditText
        android:id="@+id/edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:ems="10"
        android:hint="账户"
        android:inputType="textNoSuggestions"
        android:textColor="@color/wheat"
        android:textColorHint="@color/wheat"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/wheat"
        android:textColorHint="@color/wheat"/>

    <EditText
        android:id="@+id/edit_ATTRIBUTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="注册时请填写邀请码"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/wheat"
        android:textColorHint="@color/wheat"/>

    <CheckBox
        android:id="@+id/SaveAccountPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_ATTRIBUTION"
        android:layout_below="@+id/edit_ATTRIBUTION"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/wheat"


        android:text="记住密码"/>

    <ProgressBar
        android:id="@+id/prog_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_ATTRIBUTION"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"/>




</RelativeLayout>
